@page
@model AbbyWeb.Pages.Customer.EditModel

<form method="POST">
	<input hidden asp-for="Customer.Id"/>
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary pl-3">Edit Customer</h2>
			<hr/>
		</div>
		<div class="mb-3">
			<label asp-for="@Model.Customer.Name"></label>
			<input asp-for="@Model.Customer.Name" class="form-control">
			<span asp-validation-for="Customer.Name" class="text-danger">
				
			</span>
		</div>
		<div class="mb-3">
			<label asp-for="@Model.Customer.Surname"></label>
			<input asp-for="@Model.Customer.Surname" class="form-control"/>
			<span asp-validation-for="Customer.Surname" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label disabled asp-for="@Model.Customer.IdentityNo"></label>
			<input disabled asp-for="@Model.Customer.IdentityNo" class="form-control"/>
		</div>
		<button type="submit" class="btn btn-primary">Edit from Customer</button>
	</div>
</form>
