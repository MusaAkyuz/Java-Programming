@page
@model AbbyWeb.Pages.Customer.DeleteModel

<form method="POST">
	<input hidden asp-for="Customer.Id"/>
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary pl-3">Delete Customer</h2>
			<hr/>
		</div>
		<div class="mb-3">
			<label asp-for="@Model.Customer.Name"></label>
			<input asp-for="@Model.Customer.Name" disabled class="form-control">
		</div>
		<div class="mb-3">
			<label asp-for="@Model.Customer.Surname"></label>
			<input asp-for="@Model.Customer.Surname" disabled class="form-control"/>
		</div>
		<div class="mb-3">
			<label asp-for="@Model.Customer.IdentityNo"></label>
			<input asp-for="@Model.Customer.IdentityNo" disabled class="form-control"/>
		</div>
		<button type="submit" class="btn btn-danger">Delete From Database</button>
	</div>
</form>
